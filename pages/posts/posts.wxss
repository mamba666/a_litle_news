/* pages/posts/posts.wxss */
.swiper_container{
  width: 100%;
  height: 600rpx;
}
.swiper_container image{
  width: 100%;
  height: 100%;
}
.detail{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  background-color: #fff;
  border: 1px solid #ededed;
  border-left:none;
  border-right: none;
  padding: 10rpx 0;
}
.userInfo{
  display: flex;
  flex-flow:row wrap;
  justify-content: flex-start;
  align-items: center;
}
.posts_ava{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
.posts_date{
  margin-left:20rpx;
}
.posts_title{
  font-weight: bold;
  padding:10rpx 0 0 20rpx;
}
.posts_img{
  width: 100%;
  height: 340rpx;
  margin: 10rpx 0;
}
.posts_con{
  letter-spacing: 2rpx;
  color:#666;
  font-size: 28rpx;
  margin:10rpx;
}
.star_view{
  margin: 10rpx;
}
.star_view text{
  margin-right:10rpx;
}
@import "/icon/icon.wxss"